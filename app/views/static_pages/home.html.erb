
<% if signed_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>自分の投稿一覧</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron waku">
    <h1>HA_SAMPLEアプリ</h1>
    <div id="front-text-list">
    </div>

    <%= link_to "新規登録", new_user_registration_path,
                                class: "btn btn-lg btn-primary" %>
  </div>
  
  <div class="col-md-8">
      <h3>最新の投稿画像一覧</h3>
     
      <% @microposts.each do |micropost| %>
      <ul>
        <li>ユーザー名: <%= @users.find(micropost.user_id).name %></li>
        <li>タイトル：<%= micropost.id %></li>
        <li>内容：<%= micropost.content %></li>
        <li>投稿日：<%= image_tag micropost.image %></li>
      </ul>
      <% end %>
  </div>

<% end %>